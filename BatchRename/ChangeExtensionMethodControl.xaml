<Window x:Class="BatchRename.ChangeExtensionMethodControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ChangeExtensionMethod" Height="150" Width="232">

    <Canvas Name="MainGrid">

        <TextBlock Text="Replace: " FontWeight="SemiBold" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="10" Canvas.Top="10" />
        <TextBox Name="ToTextbox" Width="120" Height="20" HorizontalAlignment="Right" VerticalAlignment="Center" Canvas.Left="63" Canvas.Top="42" />

        <TextBlock Text="To: " FontWeight="SemiBold" HorizontalAlignment="Left" Canvas.Left="10" Canvas.Top="42" />
        <TextBox Name="FromTextBox" Width="120" Height="20"  HorizontalAlignment="Right" Canvas.Left="63" Canvas.Top="10" />

        <Button Content="Apply" Name ="btnApplyArgs" Click="BtnApplyArgs_Click" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="80" Height="25" Canvas.Left="82" Canvas.Top="86" />
    </Canvas>
</Window>